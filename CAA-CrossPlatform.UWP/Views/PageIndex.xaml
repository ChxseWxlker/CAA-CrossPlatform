<forms:WindowsPage
    x:Class="CAA_CrossPlatform.UWP.PageIndex"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:forms="using:Xamarin.Forms.Platform.UWP"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CAA_CrossPlatform.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid Background="#fff">
            <StackPanel>
                <Rectangle Fill="#ccc" Height="100" />
                <Rectangle Fill="#00529b" Height="50" />
            </StackPanel>
            <StackPanel>
                <Image Name="CAAImg" Height="91" Width="145" Source="/Assets/caa.png" RenderTransformOrigin="0.477,0.282" Margin="50 5 0 0" HorizontalAlignment="Left"/>
                <TextBlock Text="EVENT MANAGER" FontSize="50" Margin="200 -80 0 0" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="0 160 0 0">
                <TextBlock Text="Login / Register" TextWrapping="Wrap" FontSize="35"/>
            </StackPanel>

            <Frame x:Name="testFrame"></Frame>
            
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Username" Margin="0 350 0 0" TextWrapping="Wrap" FontSize="25"/>
                <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="0 5 0 0" TextWrapping="Wrap" Height="40" Width="500" FontSize="22" KeyDown="txtLogin_KeyDown" />

                <TextBlock Text="Password" Margin="0 20 0 0" TextWrapping="Wrap" FontSize="25"/>
                <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="0 5 0 0" Height="40" Width="500" FontSize="22" KeyDown="txtLogin_KeyDown" />
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="btnLogin" Margin="-160 550 0 0" Height="40" Width="150" Content="Login" Foreground="#fff" Background="#00529b" Click="btnLogin_Click"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center">
                <Button x:Name="btnRegister" Margin="160 550 0 0" Height="40" Width="150" Content="Register" Foreground="#fff" Background="#00529b" Click="btnRegister_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</forms:WindowsPage>